
@{
    ViewBag.Title = "Index_LoggedIn";
}


<div class="row">
    <div class="col-md-4 ">
        <img class="" src="..\Pictures\Icon.png" />
    </div>
    <div class=" col-md-4 ">
        <h1 style="color: hotpink; font-weight: 600">Welcome to Just the Tip Dating</h1>
        <p class="lead">A dating site for desires out of the ordinary</p>

    </div>

</div>
<div class="col-md-3 text-center">
    <h2>Profile</h2>
    <button class="btn" onclick="location.href='@Url.Action("Index", "Profile")'"><i class="fas fa-user-circle"></i></button>
</div>
<div class="col-md-3 text-center">
    <h2>Messages</h2>
    <button class="btn"><i id="messageicon" class="fas fa-envelope"></i></button>
</div>
<div class="col-md-3 text-center">
    <h2>Friends</h2>
    <button class="btn" onclick="location.href='@Url.Action("Index", "Friends")'"><i id="friendicon" class="fas fa-user-friends"></i></button>
</div>

<div class="col-md-3 text-center">
    <h2>Search</h2>
    <button class="btn"><i class="fas fa-search"></i></button>
</div>
<div class="col-md-4 col-md-offset-4">
    <h2 class="newevents">Du har nya händelser!</h2>
</div>

<style>
    .btn {
        cursor:pointer;
        background-color: white;
    }

    .fa-envelope, .fa-user-friends, .fa-search, .fa-user-circle {
        font-size: 200px;
        text-shadow: 3px 3px 16px #272634;
    }

        .fa-envelope:hover, .fa-user-friends:hover, .fa-search:hover, .fa-user-circle:hover {
            color: darkslategray;
        }

    #col-md-3 {
        text-align: center;
    }

    .newmsg {
        color: #ffd800;
    }

    .newfriend {
        color: limegreen;
    }
    .newevents {
        display: none;
    }
</style>
<script>
    function newMessage() {
        $("#messageicon").addClass("newmsg");
    };
    function newFriend() {
        $("#friendicon").addClass("newfriend");
        $("#friendnavbaricon").addClass("newfriend");
    }

</script>
