@model List<JustTheTip.Models.UserModel>

@{
    ViewBag.Title = "Index_LoggedIn";
}


<div class="row">
    <div class="col-md-2 ">
        <img class="" src="..\Pictures\Icon.png" />
    </div>
    <div class=" col-md-4 text-center">
        <h1 class="welcometext">Welcome to Just the Tip Dating</h1>
        <p class="lead">A dating site for desires out of the ordinary</p>

    </div>


    <div class="col-md-3 text-center">
        <h2>Profile</h2>
        <button class="btn loggedinbtn" onclick="location.href='@Url.Action("Index", "Profile")'"><i class="fas fa-user-circle"></i></button>
    </div>
    <div class="col-md-3 text-center">
        <h2>Friends</h2>
        <button class="btn loggedinbtn" onclick="location.href='@Url.Action("Index", "Friends")'"><i id="friendicon" class="fas fa-user-friends"></i></button>
    </div>
</div>

<h2>Here's a few of our awesome members!</h2>
@foreach (var item in Model.Take(3))
{


    <div class="col-md-3" id="exampleusers">
        <a href="@Url.Action("Index", "Profile", new { profileId = @item.UserId})">
            <h3>@Html.DisplayFor(modelItem => item.FirstName) </h3>
            <img src="@Html.DisplayFor(modelItem => item.ProfilePicUrl)" alt="No image" id="profilepicexampleusers"class="img-circle" />

        </a>
    </div>

}
@if(null != TempData["alertMessage"])
   {
        <script type="text/javascript">
               alert('@TempData["alertMessage"]');
        </script>
   }


