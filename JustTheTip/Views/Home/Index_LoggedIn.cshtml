@model List<JustTheTip.Models.UserModel>

@{
    ViewBag.Title = "Index_LoggedIn";
}


<div class="row">
    <div class="col-md-4 ">
        <img class="" src="..\Pictures\Icon.png" />
    </div>
    <div class=" col-md-4 ">
        <h1 class="welcometext">Welcome to Just the Tip Dating</h1>
        <p class="lead">A dating site for desires out of the ordinary</p>

    </div>

</div>
<div class="col-md-3 text-center">
    <h2>Profile</h2>
    <button class="btn" onclick="location.href='@Url.Action("Index", "Profile")'"><i class="fas fa-user-circle"></i></button>
</div>
<div class="col-md-3 text-center">
    <h2>Messages</h2>
    <button class="btn"><i id="messageicon" class="fas fa-envelope"></i></button>
</div>
<div class="col-md-3 text-center">
    <h2>Friends</h2>
    <button class="btn" onclick="location.href='@Url.Action("Index", "Friends")'"><i id="friendicon" class="fas fa-user-friends"></i></button>
</div>

<div class="col-md-3 text-center">
    <h2>Search</h2>
    <button class="btn"><i class="fas fa-search"></i></button>
</div>


<h2>Here's a few of our awesome members!</h2>
@{
    if (Model != null) {

        int n = Model.Count();
        if (n > 3) {
            n = 3;
        }


        if (n > 0) {
            foreach (var item in Model.Take(n)) {

                <div class="col-md-3" id="exampleusers">
                    <a href="@Url.Action("Index", "Profile", new { profileId = @item.UserId })">
                        <h3>@Html.DisplayFor(modelItem => item.FirstName) </h3>
                        <img src="@Html.DisplayFor(modelItem => item.ProfilePicUrl)" alt="No image" style="max-height: 200px; max-width: 200px; height: auto; width: auto;" class="img-circle" />

                    </a>
                </div>
            }
        }
    }
    else {
        <h5>Sorry, we have no members bu you at the moment. Please wait for more memebers to register! </h5>
    }
}

@if (null != TempData["alertMessage"]) {
    <script type="text/javascript">
               alert('@TempData["alertMessage"]');
    </script>
}


