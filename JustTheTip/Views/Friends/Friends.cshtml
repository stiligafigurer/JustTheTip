@model JustTheTip.Models.FriendCollectionViewModel

@{
    var n = Model.Friends.Count();
}

<table class="table table-striped table-bordered table-dark">
    <tr>
        <th colspan="4" style="background-color: lightblue;">
            <h4 class="text-center" style="font-weight: bold;">Current (@n)</h4>
        </th>
    </tr>
    @if (n > 0) {
        foreach (var item in Model.Friends) {
            <tr>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.ProfilePicUrl)" alt="No image" style="max-height: 50px; max-width: 50px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.UserId }) | 
                    @Html.ActionLink("Remove", "Remove", new { id = item.UserId })
                </td>
            </tr>
        }
    } else {
        <tr>
            <td>
                You have no friends. :(
            </td>
        </tr>
    }
</table>

