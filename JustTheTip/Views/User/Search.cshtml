@model List<JustTheTip.Models.UserModel>

@{
    ViewBag.Title = "Search";
}
    <h2>Search results</h2>

        <div class="col-md-8">
            <table id="search_table" class=" table table-striped table-bordered table-bordered">
                <thead style="background-color: lightblue">
                    <tr>
                        <th scope="col" width="7%"></th>
                        <th scope="col" width="45%">Name</th>
                        <th scope="col" width="25%">Gender</th>
                        <th scope="col">Age</th>
                    </tr>
                </thead>
                <tbody>
                    @{ foreach (var item in Model)
                        {
                            
                           
                            <tr>
                                <td><img src="@item.ProfilePicUrl" alt="ProfilePic" class="img-rounded" style="max-height:50px; max-width:50px; height:auto; width:auto" /></td>
                                <td>@item.FirstName @item.LastName</td>
                                <td>@item.Gender</td>
                                <td>
                                    @{var today = DateTime.Today;
                                        var birthDate = item.BirthDate.Value;
                                        var age = today.Year - birthDate.Year;
                                        if (birthDate > today.AddYears(-age)) { age--; }
                                    }@age
                                </td>
                            </tr>
                                                
                       }
                }
                </tbody>
            </table>
        </div>









